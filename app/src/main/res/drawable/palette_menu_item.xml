<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="@dimen/palette_item_margin"
        android:left="@dimen/palette_item_margin"
        android:right="@dimen/palette_item_margin"
        android:top="@dimen/palette_item_margin">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/darker_gray" />
            <size
                android:width="42dp"
                android:height="42dp" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <item
        android:bottom="6dp"
        android:left="6dp"
        android:right="6dp"
        android:top="6dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <size
                android:width="36dp"
                android:height="36dp" />
            <corners android:radius="2dp" />
        </shape>
    </item>

</layer-list>