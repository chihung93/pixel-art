<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/spacing"
    android:paddingLeft="@dimen/edge_keyline"
    android:paddingRight="@dimen/edge_keyline">

    <TextView
        android:id="@+id/tv_threshold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_margin"
        android:layout_marginTop="@dimen/view_margin"
        android:text="@string/tool_option_threshold"
        android:textColor="@color/panel_content_colour"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_threshold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/sb_threshold"
        android:layout_marginLeft="@dimen/view_margin"
        android:layout_marginTop="@dimen/view_margin"
        android:ems="2"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:maxLength="2"
        android:textColor="@color/panel_content_colour" />

    <SeekBar
        android:id="@+id/sb_threshold"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_threshold"
        android:layout_marginRight="@dimen/view_margin"
        android:layout_marginTop="@dimen/view_margin"
        android:layout_toLeftOf="@id/et_threshold"
        android:layout_weight="1"
        android:max="@integer/tool_max_threshold"
        android:textColor="@color/panel_content_colour" />


</RelativeLayout>