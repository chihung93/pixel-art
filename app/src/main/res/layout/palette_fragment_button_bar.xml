<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_button_bar"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/panel_background"
    android:orientation="horizontal">

    <Button
        android:id="@+id/bt_customise_palette"
        style="@style/Widget.AppCompat.Light.ActionButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gridLayout"
        android:layout_weight="2"
        android:text="@string/button_customise_palette"
        android:textColor="@color/panel_content_colour" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/divider_dark_background" />

    <Button
        android:id="@+id/bt_next_palette"
        style="@style/Widget.AppCompat.ActionButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gridLayout"
        android:layout_weight="2"
        android:text="@string/button_next_palette"
        android:textColor="@color/panel_content_colour" />

</LinearLayout>