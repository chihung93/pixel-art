<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_file_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_selector"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/file_item_padding">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_selector"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_drawing"
                style="@style/Base.Widget.AppCompat.ActionButton"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/view_margin"
                android:layout_marginLeft="@dimen/view_margin"
                android:layout_marginTop="@dimen/view_margin"
                android:background="@drawable/checkerboard"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_filename"
                style="@style/Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/view_margin"
                android:layout_marginLeft="@dimen/view_margin"
                android:layout_marginTop="@dimen/view_margin"
                android:ellipsize="end"
                android:minLines="3"
                android:maxLines="3"
                android:maxWidth="96dp"
                android:text="Test File" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_delete"
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:src="@drawable/ic_delete_dark" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_file_add"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:gravity="center"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">

        <ImageView
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_add_dark" />

        <TextView
            style="@style/Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_new_drawing" />
    </LinearLayout>

</FrameLayout>