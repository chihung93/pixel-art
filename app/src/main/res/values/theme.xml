<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/surface_background_colour</item>
        <item name="android:alertDialogTheme">@style/MyDialog</item>
        <item name="android:seekBarStyle">@style/MySeekBar</item>

        <item name="windowActionBarOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent_colour</item>
    </style>

    <!-- ActionBar theme -->
    <style name="MyActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/actionbar_background_colour</item>
        <item name="android:textColorPrimary">@color/actionbar_text_colour</item>

        <!-- Support library compatibility -->
        <item name="logo">@drawable/ic_logo</item>
        <item name="displayOptions">showHome|useLogo</item>
    </style>

    <style name="MyPopupMenu" parent="ThemeOverlay.AppCompat.Light"></style>

    <style name="MyDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- View Styles -->
    <style name="TextLight">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextDark">
        <item name="android:textColor">#DE000000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Subhead" parent="TextLight">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Body" parent="TextLight">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextDark.Body" parent="TextDark">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Pre-lollipop tinted view style -->
    <style name="MySeekBar" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/seekbar_progress_selector</item>
        <item name="android:indeterminateDrawable">@drawable/seekbar_progress_selector</item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
        <item name="android:thumb">@drawable/seekbar_control_selector</item>
        <item name="android:thumbOffset">16dip</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>

</resources>