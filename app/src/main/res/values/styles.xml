<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/surface_background_colour</item>

        <!-- Support library compatibility -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent_colour</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- ActionBar theme -->
    <style name="MyActionBar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/actionbar_background_colour</item>
        <item name="android:textColorPrimary">@color/actionbar_text_colour</item>

        <!-- Support library compatibility -->
        <item name="logo">@drawable/ic_logo</item>
        <item name="displayOptions">showHome|useLogo</item>
        <item name="background">@color/actionbar_background_colour</item>
        <item name="popupTheme">@style/MyPopupMenu</item>
    </style>

    <style name="MyActionBarTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text_colour</item>
    </style>

    <!-- Contextual ActionBar theme -->
    <style name="MyActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="android:actionModeBackground">@color/primary_dark</item>

        <!-- Support library compatibility -->
        <item name="actionModeBackground">@color/primary_dark</item>
    </style>

    <style name="MyPopupMenu" parent="Widget.AppCompat.Light.PopupMenu">

    </style>

    <!-- View Styles -->
    <style name="TextSmall">
        <item name="android:textColor">#000000</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="Subhead" parent="TextSmall">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Body" parent="TextSmall">
        <item name="android:textSize">14sp</item>
    </style>

</resources>